/* pages/show/show.wxss */
.header-comments {
  padding: 16px;
  font-size: 12px;
}
.card-comment {
  background: white;
  box-shadow: 0 0 1px rgba(0,0,0,0.2);
  padding: 16px;
}

.card-comment .h3 {
  margin-bottom: 10px;
}

.card-comment .p {
  font-size: 12px;
  line-height: 1.4;
  color: #B2B2B2;
  margin-bottom: 0;
  margin-top: 8px;
  display: flex;
  justify-content: space-between;
}

.card-comment .del {
  color: red;
}