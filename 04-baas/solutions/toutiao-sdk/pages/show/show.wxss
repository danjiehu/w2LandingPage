/* pages/index/index.wxss */

.card-product {
  overflow: hidden;
  height: 120px;
  background: white;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
}

.card-product .h2 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
}

.card-product .p {
  font-size: 12px;
  line-height: 1.4;
  opacity: 0.7;
  margin-bottom: 0;
  margin-top: 8px;
}

.card-product .card-product-infos {
  padding: 16px;
}

.section {
  background-color: white;
  margin: 20px 0px;
  padding: 5px;
  border-radius: 4px;
}

.footer {
  position: absolute;
  bottom: 10rpx;
  border: 1px solid black;
  border-radius: 10px;
  width: 70%;
  height: 30px;
}

.footer-btn {
  position: absolute;
  bottom: 10rpx;
  right: 20px;
  border: 1px solid black;
  border-radius: 3px;
  padding: -1px;
  height: 33px;
  margin: 0px;
}
