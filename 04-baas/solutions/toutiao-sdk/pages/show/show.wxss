/* pages/show/show.wxss */
page {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  height: 100vh;
}

.header-comments {
  padding: 16px;
  font-size: 12px;
}
.card-comment {
  background: white;
  box-shadow: 0 0 1px rgba(0,0,0,0.2);
  padding: 16px;
}

.card-comment .h3 {
  margin-bottom: 10px;
}

.card-comment .p {
  font-size: 12px;
  line-height: 1.4;
  color: #B2B2B2;
  margin-bottom: 0;
  margin-top: 8px;
  display: flex;
  justify-content: space-between;
}

.card-comment .del {
  color: red;
}

form {
  background-color: #fafafa;
  padding: 16px;
}

input, button {
  padding: 5px 16px;
  background-color: white;
  border-radius: 0px;
  font-size: 16px;
}

button {
  margin: 10px 0px;
  color: #D81E06;
}