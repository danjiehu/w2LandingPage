/* pages/user/user.wxss */

.wrapper {
  width: 100vw;
  background-color: #fafafa;
  height: 55vh;
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
  align-items: center;
}

.points {
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
  align-items: center;
}

#history {
  font-size: 13px;
  top: 55px;
  right: 40px;
  position: absolute;
}

button {
  color: white;
  background-color: black;
  border-radius: 0px;
  font-size: 14px;
  padding-left: 14px;
  padding-right: 14px;
}

.banner {
  background-color: #fafafa;
  background-image: radial-gradient(ellipse at center, rgba(255,255,255,.1) 0%, rgba(250,250,250,1) 100%), url(https://media.istockphoto.com/photos/open-gift-box-christmas-present-box-silver-ribbon-bow-and-empty-space-picture-id877137586?k=6&m=877137586&s=612x612&w=0&h=qX_YICuTGcMPVwu7HrmFuPyuuYjz6HgWFyGUWARf81Y=);
  background-size: cover;
  height: 45vh;
  width: 120%;
  overflow: hidden;
  position: absolute;
  bottom: 0rpx;
}

.profile {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column;
}

.h2 {
  font-size: 20px;
  font-weight: bold;
  margin: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.section {
  background-color: white;
  margin: 20px 0px;
  padding: 5px;
  border-radius: 4px;
  border-width: 2px;
  border-color: black;
}

.section__title {
  font-weight: bold;
}

textarea {
  padding: 10px 0px;
}

#logout {
  margin-top: 30px;
}

.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}
